---
<section id="contact" class="py-24 bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-yellow-400 font-bold tracking-wider uppercase mb-2">Get In Touch</h2>
      <h3 class="text-3xl md:text-4xl font-bold text-white font-montserrat">
        Plan Your Next Event
      </h3>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-slate-950 p-8 rounded-2xl shadow-xl border border-slate-800">
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="first-name" class="block text-sm font-medium text-gray-400 mb-2">First Name</label>
              <input type="text" id="first-name" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-yellow-400 transition-colors" placeholder="John" />
            </div>
            <div>
              <label for="last-name" class="block text-sm font-medium text-gray-400 mb-2">Last Name</label>
              <input type="text" id="last-name" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-yellow-400 transition-colors" placeholder="Doe" />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-400 mb-2">Email *</label>
              <input type="email" id="email" required class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-yellow-400 transition-colors" placeholder="john@example.com" />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-400 mb-2">Phone</label>
              <input type="tel" id="phone" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-yellow-400 transition-colors" placeholder="+47 123 45 678" />
            </div>
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-400 mb-2">Subject</label>
            <input type="text" id="subject" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-yellow-400 transition-colors" placeholder="Event Inquiry" />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-400 mb-2">Message</label>
            <textarea id="message" rows="4" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-yellow-400 transition-colors" placeholder="Tell us about your event..."></textarea>
          </div>

          <button type="submit" class="w-full bg-yellow-400 text-slate-900 font-bold py-4 rounded-lg hover:bg-yellow-300 transition-colors shadow-lg shadow-yellow-400/20">
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Info & Map -->
      <div class="space-y-8">
        <div class="bg-slate-800 p-8 rounded-2xl">
          <h4 class="text-xl font-bold text-white mb-6">Contact Information</h4>
          <div class="space-y-4">
            <div class="flex items-start">
              <svg class="w-6 h-6 text-yellow-400 mt-1 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
              <div>
                <p class="text-white font-medium">Location</p>
                <p class="text-gray-400">Oslo, Norway (Serving surrounding areas)</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="w-6 h-6 text-yellow-400 mt-1 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
              <div>
                <p class="text-white font-medium">Email</p>
                <p class="text-gray-400">contact@fjordandflavors.no</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="w-6 h-6 text-yellow-400 mt-1 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
              <div>
                <p class="text-white font-medium">Phone</p>
                <p class="text-gray-400">+47 123 45 678</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Map Placeholder -->
        <div class="h-64 bg-slate-800 rounded-2xl overflow-hidden relative">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d127993.40342247732!2d10.638536846067718!3d59.91333009999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46416e61f267f039%3A0x7e92605fd3231e9a!2sOslo%2C%20Norway!5e0!3m2!1sen!2sus!4v1689625482384!5m2!1sen!2sus" 
                width="100%" 
                height="100%" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade"
                class="filter grayscale contrast-125 opacity-80 hover:opacity-100 transition-opacity"
            ></iframe>
        </div>
      </div>
    </div>
  </div>
</section>
